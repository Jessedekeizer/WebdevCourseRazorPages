    Layout = null;
}


<div>
    <p>
        <span id="scoreHome">@Model.Home</span> - <span id="scoreAway">@Model.Away</span>
    </p>
    <div>
        <a id="incrementHome" href="?Home=@(Model.Home+1)">Home ++</a>
